<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shift_assignment_matrix_import_wizard_form" model="ir.ui.view">
        <field name="name">shift.assignment.matrix.import.wizard.form</field>
        <field name="model">shift.assignment.matrix.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Shift Matrix">
                <group>
                    <field name="matrix_id" readonly="1"/>
                    <field name="file_data" filename="file_name" required="1" string="Excel File"/>
                </group>
                <footer>
                    <button name="action_import" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>


